= form_tag user_sessions_path, :method => :post do
  .field
    = label_tag :login
    %br/
    = text_field_tag :login
  .field
    = label_tag :password
    %br/
    = password_field_tag :password
  .field
    = label_tag :remember
    %br/
    = check_box_tag :remember
  .actions
    = submit_tag "Login"