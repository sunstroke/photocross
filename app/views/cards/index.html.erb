<h1>Listing cards</h1>

<table>
  <tr>
    <th>Card num</th>
    <th>Pin</th>
    <th>Team</th>
    <th>Activated</th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%=h card.card_num %></td>
    <td><%=h card.pin %></td>
    <td><%=h card.team_id %></td>
    <td><%=h card.activated %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New card', new_card_path %>