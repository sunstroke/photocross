%h1= h @user.login

- if current_user == @user
  - form_for @user do |f|
    = f.text_field :login, :label => "Можете поменять свой логин"
    = f.text_field :email, :label => "Ваш email"
    = f.password_field :password, :label => "Новый пароль"
    = f.password_field :password_confirmation, :label => "Подтверждение пароля"
    = f.submit "Сохранить изменения"