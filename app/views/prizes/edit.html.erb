<h1>Editing prize</h1>

<%= form_for(@prize, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <%= f.file_field :image, :label => "Картинка"%>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :event_id %><br />
    <%= f.text_field :event_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @prize %> |
<%= link_to 'Back', prizes_path %>