!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Фотокросс"
    = csrf_meta_tag    
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic", :rel => "stylesheet", :type => "text/css"}/    
    -# %link{:href => "css/bootstrap.css", :rel => "stylesheet"}/
      %link{:href => "css/theme.css", :rel => "stylesheet", :type => "text/css"}/
      %link{:href => "css/index.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/

      %link{:href => "css/lib/animate.css", :media => "screen, projection", :rel => "stylesheet", :type => "text/css"}/
    / Le HTML5 shim, for IE6-8 support of HTML elements    
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "welcomes", :media => "screen"
    = stylesheet_link_tag "animate", :media => "screen, projection"        
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="favicon.ico" rel="shortcut icon")
      
  %body.pull_top
    .navbar.transparent.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#{root_path}"}
            %strong ФОТОКРОСС
          .nav-collapse.collapse
            %ul.nav.pull-right
              %li= link_to "СОБЫТИЯ", events_path , :class => current_page?(events_path) ? "active" : ""
              %li= link_to "УЧАСНИКИ", events_path , :class => current_page?(events_path) ? "active" : ""
              %li= link_to "ФОТОГРАФИИ", gallery_path , :class => current_page?(gallery_path) ? "active" : ""
              %li= link_to "ОРГАНИЗАТОРЫ", page_path("contacts") , :class => current_page?(page_path("contacts")) ? "active" : ""              
              %li= link_to "ПАРНЕРЫ", page_path("partners") , :class => current_page?(page_path("partners")) ? "active" : ""              
              - if current_user
                %li= link_to current_user.login, edit_user_path(current_user.id)
                %li= link_to "Выход", :logout
              - else
                %li= link_to "Регистрация", new_user_path
                %li=link_to "Вход", :login
    =raw(yield)
    %footer#footer
      = render :partial => "layouts/footer"      
    = javascript_include_tag  "http://code.jquery.com/jquery-latest.js", "bootstrap.min","theme", "index-slider"
    -#

      %script{:src => "js/bootstrap.min.js"}
      %script{:src => "js/theme.js"}
      %script{:src => "js/index-slider.js", :type => "text/javascript"}
