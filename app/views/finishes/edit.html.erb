<h1>Editing finish</h1>

<%= form_for(@finish, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <%= f.file_field :image, :label => "Картинка"%>
  <%= f.hidden_field :event_id %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :event_id %><br />
    <%= f.text_field :event_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @finish %> |
<%= link_to 'Back', finishes_path %>